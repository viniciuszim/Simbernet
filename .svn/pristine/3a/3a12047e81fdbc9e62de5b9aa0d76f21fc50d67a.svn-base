#import "UIColor+Simbernet.h"

@implementation UIColor (Simbernet)

+(UIColor*)simbernetDefaultColor
{
    return [UIColor colorWithRed:0.282 green:0.541 blue:0.886 alpha:1]; // #488ae2
}

+(UIColor*)simbernetSelectedColor
{
    return [UIColor colorWithRed:0.000 green:1.000 blue:0.996 alpha:1];
}

+(UIColor*)simbernetValidationAlertColor
{
    return [UIColor colorWithRed:0.812 green:0.325 blue:0.392 alpha:1];
}

+(UIColor*)simbernetPlaceholderColor
{
    return [UIColor colorWithRed:0.820 green:0.820 blue:0.835 alpha:1];
}



@end
